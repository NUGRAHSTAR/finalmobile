<!-- res/drawable/bgtext.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
    <!-- Warna latar belakang -->
    <solid android:color="#E5F0D7" />

    <!-- Garis border -->
    <stroke
        android:width="2dp"
        android:color="#5B7741" />

    <!-- Sudut membulat -->
    <corners android:radius="12dp" />

    <!-- Padding (jarak dalam) -->
    <padding
        android:left="12dp"
        android:top="8dp"
        android:right="12dp"
        android:bottom="8dp" />
</shape>
